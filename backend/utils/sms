const twilio = require('twilio');
const config = require('../config/twilioConfig.json');

// Initialize Twilio client
const client = twilio(config.accountSid, config.authToken);

/**
 * Send SMS via Twilio
 * @param {string} to - Phone number to send to
 * @param {string} body - SMS message body
 * @returns {Promise} Twilio response
 */
async function sendSMS(to, body) {
  try {
    console.log(`Sending SMS to ${to}: ${body}`);
    
    const message = await client.messages.create({
      body,
      from: config.fromNumber,
      to
    });
    
    console.log(`SMS sent successfully: ${message.sid}`);
    return message;
  } catch (error) {
    console.error('SMS send failed:', error.message);
    throw error;
  }
}

/**
 * Send WhatsApp message via Twilio
 * @param {string} to - WhatsApp number (format: whatsapp:+1XXXXXXXXXX)
 * @param {string} body - Message body
 * @returns {Promise} Twilio response
 */
async function sendWhatsApp(to, body) {
  try {
    console.log(`Sending WhatsApp to ${to}: ${body}`);
    
    const message = await client.messages.create({
      body,
      from: `whatsapp:${config.fromNumber}`,
      to: `whatsapp:${to}`
    });
    
    console.log(`WhatsApp sent successfully: ${message.sid}`);
    return message;
  } catch (error) {
    console.error('WhatsApp send failed:', error.message);
    throw error;
  }
}

module.exports = {
  sendSMS,
  sendWhatsApp
};
